//1번

/*class Base {
	int v1; //private 멤버(자식 클래스에서 직접 접근 x)
protected:
	int v2; //protected 멤버(자식 클래스에서 직접 접근 가능)
public: 
	int v3; //public 멤버(어디서나 접근 가능) 

	int getV1() { return v1; }  // 접근자 (accessor)
	int getV2() { return v2; }
	int getV3() { return v3; }
	void setV1(int v) { v1 = v; }// 설정자 (mutator)
	void setV2(int v) { v2 = v; }
	void setV3(int v) { v3 = v; }
};
//public 상속
class Derived1 : public Base {
public:
	void test() {
		//v1 = 1; //private 직접 접근 불가
		v2 = 2; //protected 자식에서 접근 가능
		v3 = 3; // public 그대로 상속(접근 가능)
		cout << "[Derived1] v2=" << v2 << ", v3=" << v3 << endl;
	}
};
//protected 상속
class Derived2 : protected Base {
public:
	void test2() {
		//v1 = 10; // private 접근 불가 
		v2 = 20; // protected 접근 가능
		v3 = 30; // public이지만 protected로 바뀜
		cout << "[Derived1] v2=" << v2 << ", v3=" << v3 << endl;
	}
};
// private 상속
class Derived3 : private Base {
public:
	void test3() {
		//v1 = 100; //private 접근 불가능
		v2 = 200; //내부접근 가능(private로 상속)
		v3 = 300; //내부접근 가능(private로 상속)
		cout << "[Derived1] v2=" << v2 << ", v3=" << v3 << endl;
	}
};

int main(int argc, char const* argv[])
{
	Derived1 d1;
	Derived2 d2;
	Derived3 d3;

	cout << "--- Derived1(public 상속) ---" << endl;
	d1.test();
	d1.setV1(10);
	d1.setV2(20);
	d1.setV3(30);
	cout << "d1.getV1() :" << d1.getV1() << endl;
	cout << "d1.getV2() :" << d1.getV2() << endl;
	cout << "d1.getV3():" << d1.getV3() << endl;

	cout << " ---- Derived2(protected 상속) ----" << endl;
	d2.test2();
	//d2.v3 = 10; //외부 접근 불가능(protected로 바뀜)
	//d2.setV3(40); // setV3도 protected로 바뀜(main에서 접근 불가능)

	cout << " ----- Derived3(private 상속) -----" << endl;
	d3.test3();
	//d3.v3 = 10; //private로 바뀜
	//d3.setV3(50); //main에서 접근 불가능


}*/
