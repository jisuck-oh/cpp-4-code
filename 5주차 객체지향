/*class Dimension {
	double x, y, z; // 좌표값 저장
public:
	// 2D 생성자( 3번째 인자에 기본값 0.0 -> 2d 생성 가능)
	Dimension(double i, double j, double k = 0.0) : x(i), y(j), z(k) {}

	void print() {
		if (z == 0.0) // z가 0이면 2D , 아니면 3D
			cout << "2D: (" << x << ", " << y << ")" << endl;
		else
			cout << "3D: (" << x << ", " << y << ", " << z << ")" << endl;
	}
};

int main() {
	Dimension point2D(3.0, 4.0); //2D 좌표(z 생략 가능)
	Dimension point3D(1.0, 2.0, 5.0); //3D 좌표

	point2D.print();  
	point3D.print();  

