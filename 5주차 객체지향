/*class Car
{
	int speed;
public:
	Car(int s) : speed(s) { // 생성자: Car 객체가 만들어 질 때 값을 설정
		cout << "car 생성자 호출 (speed = " << speed << ")" << endl;
	}
	void setSpeed(int s) { speed = s; }
	int getSpeed() { return speed; }
};

class SportCar : public Car
{
	bool turbo;
public:
	SportCar(int s, bool t) : Car(s), turbo(t) { // 삼항연산자 사용
		cout << "SportCar 생성자 호출 (turbo = " << (turbo ? "ON" : " OFF ") << ")" << endl;
	}
	void setTurbo(bool t) { turbo = t; }
	int getTurbo() { return turbo; }
};

int main(int argc, char const* argv[])
{
	SportCar myCar(220, true);
	cout << "speed:" << myCar.getSpeed() << endl;
	cout << "turbo:" << (myCar.getTurbo() ? "ON" : "OFF") << endl;
	// turbo가 true면 on false면 off 출력
	return 0;
}*/

